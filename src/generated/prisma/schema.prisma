generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model PlaygroundHistory {
  id        String               @id @default(cuid())
  prompt    String
  timestamp DateTime             @default(now())
  responses PlaygroundResponse[]
}

model PlaygroundResponse {
  id        String            @id @default(cuid())
  modelId   String
  text      String            @db.Text
  history   PlaygroundHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId String

  // Metrics
  promptTokens     Int
  completionTokens Int
  totalTokens      Int
  responseTime     Float
  estimatedCost    Float

  createdAt DateTime @default(now())
}
